{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Banzai",
  "version": "1.2.4",
  "identifier": "com.banzai.clipboard",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Banzai - Clipboard History",
        "width": 500,
        "height": 1400,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "macOS": {
      "minimumSystemVersion": "10.14"
    }
  }
}
